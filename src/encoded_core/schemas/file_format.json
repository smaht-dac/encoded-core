{
    "title": "File Format",
    "description": "Known file formats and information about them.",
    "$id": "/profiles/file_format.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "file_format",
        "standard_file_extension"
    ],
    "identifyingProperties": [
        "file_format",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "extrafile_formats": {
            "items": {
                "description": "A file format for an extra file",
                "linkTo": "FileFormat",
                "title": "Format",
                "type": "string"
            },
            "minItems": 1,
            "permission": "restricted_fields",
            "title": "Extra File Formats",
            "type": "array",
            "uniqueItems": true
        },
        "file_format": {
            "description": "Format or extension for a file",
            "permission": "restricted_fields",
            "title": "File Format",
            "type": "string",
            "uniqueKey": true
        },
        "file_format_specification": {
            "additionalProperties": false,
            "attachment": true,
            "description": "Text or pdf file that further explains the file format",
            "ff_flag": "clear clone",
            "formInput": "file",
            "properties": {
                "blob_id": {
                    "internal_comment": "blob storage ID. Use to like with s3/rds",
                    "title": "Blob ID",
                    "type": "string"
                },
                "download": {
                    "description": "File Name of the attachment.",
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "description": "Path to download the file attached to this Item.",
                    "internal_comment": "Internal webapp URL for document file",
                    "title": "href",
                    "type": "string"
                },
                "md5sum": {
                    "description": "Use this to ensure that your file was downloaded without errors or corruption.",
                    "format": "md5sum",
                    "title": "MD5 Checksum",
                    "type": "string"
                },
                "size": {
                    "description": "Size of the file on disk",
                    "title": "File size",
                    "type": "integer"
                },
                "type": {
                    "enum": [
                        "application/msword",
                        "application/pdf",
                        "text/plain"
                    ],
                    "title": "Media Type",
                    "type": "string"
                }
            },
            "title": "File format specification",
            "type": "object"
        },
        "other_allowed_extensions": {
            "description": "Additional allowable extensions for uploading files of this format",
            "items": {
                "title": "OK Extension",
                "type": "string"
            },
            "minItems": 1,
            "permission": "restricted_fields",
            "title": "Allowed Extensions",
            "type": "array",
            "uniqueItems": true
        },
        "standard_file_extension": {
            "description": "The standard extension added to files for download",
            "permission": "restricted_fields",
            "title": "Standard File Extension",
            "type": "string"
        },
        "valid_item_types": {
            "description": "Types of items that can utilize this file format",
            "items": {
                "enum": [
                    "FileProcessed",
                    "FileReference",
                    "FileSubmitted"
                ],
                "title": "Item Type",
                "type": "string"
            },
            "minItems": 1,
            "permission": "restricted_fields",
            "title": "Valid Item Types",
            "type": "array",
            "uniqueItems": true
        }
    },
    "facets": {
        "valid_item_types": {
            "title": "Valid item types",
            "disabled": true
        }
    }
}
